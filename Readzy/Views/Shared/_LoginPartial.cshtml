


<ul class="navbar-nav ms-auto">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link px-3" asp-area="Customer" asp-controller="Home" asp-action="Index">Welcome @User.Identity.Name</a>
        </li>

        <li class="nav-item">
            <form asp-area="User" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="nav-link btn btn-link px-3 text-decoration-none">Logout</button>
            </form>
        </li>
 
        
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link px-3" asp-area="User" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link px-3" asp-area="User" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
</ul>