@model CategoryViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row pb-3 mt-2 shadow-sm rounded-1 ">
   
        <div class="row text-light text-center bg-primary rounded-1 pb-3 pt-3 ms-0">
            <h2> Create New Category </h2>
        </div>

        <form asp-controller="Category" asp-action="SaveCreate" asp-route-Id="@Model.Id" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="form-group mb-3 ">
                <label asp-for="Name" class="control-label">Category Name</label>
                <input asp-for="Name" class="form-control rounded-1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group mb-3 ">
                <label asp-for="DisplayOrder" class="control-label">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control rounded-1" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="form-group col-6 ">
                    <input type="submit" value="Create" class="btn btn-primary form-control rounded-1" />
                </div>

                <div class="form-group col-6 ">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondry border form-control border-secondary rounded-1">Back to List</a>
                </div>
            </div>
        </form>

    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
