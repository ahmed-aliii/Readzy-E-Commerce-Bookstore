@model Product
@{
    ViewData["Title"] = "Delete";
}



<div class="row pb-3 mt-2 shadow-sm rounded-1 ">

    <div class="row text-light text-center bg-danger rounded-1 pb-3 pt-3 ms-0">
        <h2> Delete Book </h2>
    </div>

    <form asp-controller="Product" asp-action="SaveDelete" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id" hidden />

        <div class="form-group mb-3 ">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control rounded-1" />
        </div>

        <div class="form-group mb-3 ">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled class="form-control rounded-1" />
        </div>

        <div class="form-group mb-3 ">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control rounded-1" />
        </div>


        <div class="form-group mb-3 ">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control rounded-1" />
        </div>

        <div class="form-group mb-3 text-danger">
            Are You Sure?
        </div>

        <div class="row">
            <div class="form-group col-6 ">
                <input type="submit" value="Yes Sure, Delete" class="btn btn-danger form-control rounded-1" />
            </div>

            <div class="form-group col-6 ">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondry border form-control border-secondary rounded-1">Back to List</a>
            </div>
        </div>

    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
